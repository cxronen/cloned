{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"]
    },
    "jsx": "preserve",
    "types": [
      "axios",
      "@types/tizen-tv-webapis",
      "unplugin-icons/types/vue",
      "vite-plugin-vue-layouts/client",
      "vite/client",
      "vuetify",
      "vue"
    ]
  },
  "vueCompilerOptions": {
    "strictTemplates": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "./*.d.ts"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}
